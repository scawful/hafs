{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "studio",
      "displayName": "HAFS Studio (Debug)",
      "inherits": "base",
      "cacheVariables": {
        "HAFS_BUILD_STUDIO": "ON",
        "HAFS_BUILD_NATIVE": "OFF"
      }
    },
    {
      "name": "studio-release",
      "displayName": "HAFS Studio (Release)",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "HAFS_BUILD_STUDIO": "ON",
        "HAFS_BUILD_NATIVE": "OFF"
      }
    },
    {
      "name": "native",
      "displayName": "HAFS Native (Debug)",
      "inherits": "base",
      "cacheVariables": {
        "HAFS_BUILD_STUDIO": "OFF",
        "HAFS_BUILD_NATIVE": "ON"
      }
    },
    {
      "name": "all",
      "displayName": "HAFS All (Debug)",
      "inherits": "base",
      "cacheVariables": {
        "HAFS_BUILD_STUDIO": "ON",
        "HAFS_BUILD_NATIVE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "studio",
      "displayName": "Build Studio",
      "configurePreset": "studio"
    },
    {
      "name": "studio-release",
      "displayName": "Build Studio (Release)",
      "configurePreset": "studio-release"
    },
    {
      "name": "native",
      "displayName": "Build Native",
      "configurePreset": "native"
    },
    {
      "name": "all",
      "displayName": "Build All",
      "configurePreset": "all"
    }
  ]
}
