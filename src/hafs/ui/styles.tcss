/* Fix hatch usage for maximized view */
Screen.-maximized-view {
    layout: vertical !important;
    overflow-y: auto !important;
    align: center middle;
    background: $surface;
}

/* Global */
Screen {
    background: $background;
}

/* Header */
Header {
    background: $primary;
    color: $text;
    dock: top;
    height: 3;
}

/* Footer */
Footer {
    background: $surface;
    dock: bottom;
}

/* Main container */
#main-container {
    layout: horizontal;
    height: 100%;
}

/* Sidebar / Project Tree */
#sidebar {
    width: 30;
    background: $surface;
    border-right: solid $primary;
}

#project-tree {
    background: transparent;
    padding: 1;
}

#project-tree > .tree--label {
    color: $secondary;
}

#project-tree > .tree--cursor {
    background: $primary;
}

#project-tree:focus > .tree--cursor {
    background: $secondary;
}

/* Content area */
#content {
    width: 1fr;
    background: $background;
}

/* Context Viewer */
#context-viewer {
    background: $surface;
    border: solid $primary;
    padding: 1;
    margin: 1;
}

.context-section {
    padding: 1;
    margin-bottom: 1;
}

.context-section-title {
    color: $secondary;
    text-style: bold;
    margin-bottom: 1;
}

/* Mount items */
.mount-item {
    padding-left: 2;
}

.mount-item-memory {
    color: $info;
}

.mount-item-knowledge {
    color: $info;
}

.mount-item-tools {
    color: $error;
}

.mount-item-scratchpad {
    color: $success;
}

.mount-item-history {
    color: $text-muted;
}

/* Session List */
#session-list {
    background: $surface;
    border: solid $primary;
    margin: 1;
}

.session-item {
    padding: 1;
    height: 3;
}

.session-item:hover {
    background: $surface-highlight;
}

.session-item.-selected {
    background: $primary;
}

.session-timestamp {
    color: $text-muted;
}

.session-id {
    color: $secondary;
}

.session-stats {
    color: $success;
}

/* Plan Viewer */
#plan-viewer {
    background: $surface;
    border: solid $primary;
    margin: 1;
    padding: 1;
}

.plan-title {
    color: $secondary;
    text-style: bold;
}

.task-item {
    padding-left: 2;
}

.task-todo {
    color: $text-muted;
}

.task-in-progress {
    color: $warning;
}

.task-done {
    color: $success;
}

/* Stats Panel */
#stats-panel {
    background: $surface;
    border: solid $primary;
    height: 8;
    margin: 1;
    padding: 1;
}

.stat-label {
    color: $text-muted;
}

.stat-value {
    color: $secondary;
    text-style: bold;
}

/* Search Bar */
#search-bar {
    dock: top;
    height: 3;
    background: $surface;
    border-bottom: solid $primary;
    padding: 0 1;
}

#search-input {
    background: $background;
    border: solid $primary;
}

#search-input:focus {
    border: solid $secondary;
}

/* Status Bar */
#status-bar {
    dock: bottom;
    height: 1;
    background: $primary;
    color: $text;
    padding: 0 1;
}

/* Tabs */
TabbedContent {
    background: $background;
}

Tab {
    background: $surface;
    color: $text-muted;
}

Tab:hover {
    background: $surface-highlight;
}

Tab.-active {
    background: $primary;
    color: $text;
}

TabPane {
    background: $background;
    padding: 1;
}

/* DataTable */
DataTable {
    background: $surface;
}

DataTable > .datatable--header {
    background: $primary;
    color: $text;
    text-style: bold;
}

DataTable > .datatable--cursor {
    background: $primary;
}

DataTable:focus > .datatable--cursor {
    background: $secondary;
}

/* Buttons */
Button {
    background: $primary;
    color: $text;
    border: none;
}

Button:hover {
    background: $secondary;
}

Button:focus {
    background: $secondary;
}

Button.-primary {
    background: $secondary;
}

Button.-primary:hover {
    background: $primary;
}

/* Input */
Input {
    background: $background;
    border: solid $primary;
    color: $text;
}

Input:focus {
    border: solid $secondary;
}

/* Select */
Select {
    background: $surface;
    border: solid $primary;
}

Select:focus {
    border: solid $secondary;
}

/* ListView */
ListView {
    background: $surface;
}

ListItem {
    padding: 1;
}

ListItem:hover {
    background: $surface-highlight;
}

ListView:focus > ListItem.-selected {
    background: $secondary;
}

/* Scrollbar */
Scrollbar {
    background: $surface;
}

ScrollbarSlider {
    background: $primary;
}

ScrollbarSlider:hover {
    background: $secondary;
}

/* Log messages */
.log-user {
    color: $info;
}

.log-assistant {
    color: $secondary;
}

.log-tool {
    color: $success;
}

/* Empty state */
.empty-state {
    color: $text-muted;
    text-align: center;
    padding: 2;
}

/* Loading */
.loading {
    color: $secondary;
    text-align: center;
}

/* Error */
.error-message {
    color: $error;
    padding: 1;
    border: solid $error;
    background: $surface;
}

/* Warning */
.warning-message {
    color: $warning;
    padding: 1;
    border: solid $warning;
    background: $surface;
}

/* Success */
.success-message {
    color: $success;
    padding: 1;
    border: solid $success;
    background: $surface;
}
